<% if !transaction.buyer_id %>
<div class="card">
  <img src= "http://covers.openlibrary.org/b/isbn/<%= transaction.book.isbn %>-M.jpg" alt="Card image cap" height="220" width="150">
  <h4 class="card-title"> <%= transaction.book.title %></h4>
  <p class="card-text"><strong>Author:</strong> <%= transaction.book.author %> </p>
  <p class="card-text"><strong>Price:</strong> <%= transaction.price %> </p>
  <p class="card-text"><strong>posted by:</strong> <%= link_to transaction.seller.name, student_path(transaction.seller) %> </p>
  <% if @student != current_student %>
      <div style = " margin: 0 auto;  "> <%= link_to 'Buy', buybook_path(:transaction_id => transaction.id), class: "btn btn-success", style: "color: #ffffff;" %></div>
  <% end %>
</div>
<% end %>
