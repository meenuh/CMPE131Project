<div class="page-header">
  <h1>Add new book</h1>
</div>

<%= form_for current_student.books.build do |f| %>
    <div class="form-group">
      <%= f.label :title %><br />
      <%= f.text_field :title, class:"form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :author %><br />
      <%= f.text_field :author, class:"form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :isbn %><br/>
      <%= f.number_field :isbn, class:"form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :class_for %><br/>
      <%= f.text_field :class_for, class:"form-control"  %>
    </div>
  
    <div class="actions">
      <%= f.submit%>
    </div>
<% end %>
<br></br>
<%= link_to 'Back', current_student, class: "btn btn-default" %>
