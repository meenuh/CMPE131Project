

<div class="page-header">
  <h1><%= @school.name %></h1>
  <h2>Welcome <%= current_student.username %></h2>
</div>

<p>
  <strong>No of students:</strong>
  <%= @school.no_of_students %>
</p>

<%= link_to 'Edit', edit_school_path(@school) %> |
<%= link_to 'Back', schools_path %>

<h1>Listing Students</h1>

<table>
  <thead>
  <tr>
    <th>Username</th>
    <th>Major</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @school.students.find_each do |s| %>
      <tr>
        <td><%= s.username %></td>
        <td><%= s.major %></td>
        <td><%= link_to 'Show', s %></td>
        <td><%= link_to 'Edit', edit_student_path(s) %></td>
        <td><%= link_to 'Destroy', s, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>



<h3>Books</h3>
<% @school.students.each do |s| %>
    <% s.books.find_each do |b| %>
        <p>
          <strong>Name:</strong>
          <%= b.title %>
        </p>

        <p>
          <strong>Author:</strong>
          <%= b.author %>
        </p>
    <% end %>
<% end %>
